<% if logged_in? %>
    <header>
      <div class="upload">
        <%= form_for(@picture) do |f| %>
        
            <%= f.label:image, "+Upload Pictures" %>
            <%= f.file_field:image %>
            <%= f.hidden_field:image_cache %>
          <div id="show" class="pichidden">  
            <%=  f.submit 'Post', class:'submit' %>
          </div>
        <% end %>
        
        <script>
          $('input:file').change(function(){
            if ($('input:file').get(0).files.length != 0) {
              $('header').addClass("changed-header"); 
              $('#show').addClass("changed-box");  
            }else{
              $('header').removeClass("changed-header");
              $('#show').removeClass("changed-box");  
            }
          });
        </script>
      
      </div>
    </header>
    <%= render 'layouts/flash_messages' %>
    <div>
      <%= render 'pictures/pictures', pictures: @pictures %>
    </div>
    
    <script>
    $('.rated').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
      return $(this).attr('data-score');
      }
    });
    
    $('.rating').raty({
        path: '/assets',
        scoreName: 'evaluation[point]'
      });
    </script>
 
  
  
<% else %>
  <div class="center jumbotron ">
    <div class="text-center">
      <h1>Welcome to the Rate Pics</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
  
<% end %>