<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@picture) do |f| %>
        <div class="form-group">
          <%= f.label:image, "+Upload Pictures" %>
          <%= f.file_field:image %>
          <%= f.hidden_field:image_cache %>
        </div>
        <%=  f.submit 'Post', class:'btn btn-primary btn-sm' %>
        
      <% end %>
      
      <div class="star"></div>
      <script>
        $(".star").raty({ score: 3 });
      </script>
      
    </aside>
    <div class="col-xs-8">
      <%= render 'pictures/pictures', pictures: @pictures %>
    </div>
    
    <script>
    $('.rated').raty({
      path: '/assets/',
      readOnly: true,
      score: function() {
      return $(this).attr('data-score');
      }
    });
    
    $('.rating').raty({
        path: '/assets',
        scoreName: 'evaluation[point]'
      });
    </script>
    
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Rate Pics</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>